<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Lands.Views.TranslationsPage"
             BindingContext="{Binding Main, Source={StaticResource Locator}}"
             Title="Transtations"
             Icon="ic_action_g_translate">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout
            BindingContext="{Binding Land}"
            Padding="5">
                <Label
                FontAttributes="Bold"
                FontSize="Large"
                HorizontalOptions="Center"
                Text="{Binding Land.Name}"
                TextColor="Black">
                </Label>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="2*"/>
                    </Grid.ColumnDefinitions>
                    <Label
                        Grid.Column="0"
                        Grid.Row="0"
                        Text="Germa:"
                        TextColor="Black"/>
                    <Label
                        Grid.Column="1"
                        Grid.Row="0"
                        FontAttributes="Bold"
                        Text="{Binding Land.Translations.German}"
                        TextColor="Black"/>
                    <Label
                        Grid.Column="0"
                        Grid.Row="1"
                        Text="Spanish:"
                        TextColor="Black"/>
                    <Label
                        Grid.Column="1"
                        Grid.Row="1"
                        FontAttributes="Bold"
                        Text="{Binding Land.Translations.Spanish}"
                        TextColor="Black"/>
                    <Label
                        Grid.Column="0"
                        Grid.Row="2"
                        Text="French:"
                        TextColor="Black"/>
                    <Label
                        Grid.Column="1"
                        Grid.Row="2"
                        FontAttributes="Bold"
                        Text="{Binding Land.Translations.French}"
                        TextColor="Black"/>
                    <Label
                        Grid.Column="0"
                        Grid.Row="3"
                        Text="Japanese:"
                        TextColor="Black"/>
                    <Label
                        Grid.Column="1"
                        Grid.Row="3"
                        FontAttributes="Bold"
                        Text="{Binding Land.Translations.Japanese}"
                        TextColor="Black"/>
                    <Label
                        Grid.Column="0"
                        Grid.Row="4"
                        Text="Italian:"
                        TextColor="Black"/>
                    <Label
                        Grid.Column="1"
                        Grid.Row="4"
                        FontAttributes="Bold"
                        Text="{Binding Land.Translations.Italian}"
                        TextColor="Black"/>
                    <Label
                        Grid.Column="0"
                        Grid.Row="5"
                        Text="Brazilian:"
                        TextColor="Black"/>
                    <Label
                        Grid.Column="1"
                        Grid.Row="5"
                        FontAttributes="Bold"
                        Text="{Binding Land.Translations.Brazilian}"
                        TextColor="Black"/>
                    <Label
                        Grid.Column="0"
                        Grid.Row="6"
                        Text="Portuguese:"
                        TextColor="Black"/>
                    <Label
                        Grid.Column="1"
                        Grid.Row="6"
                        FontAttributes="Bold"
                        Text="{Binding Land.Translations.Portuguese}"
                        TextColor="Black"/>
                    <Label
                        Grid.Column="0"
                        Grid.Row="7"
                        Text="Dutch:"
                        TextColor="Black"/>

                    <Label
                        Grid.Column="1"
                        Grid.Row="7"
                        FontAttributes="Bold"
                        Text="{Binding Land.Translations.Dutch}"
                        TextColor="Black"/>
                    <Label
                        Grid.Column="0"
                        Grid.Row="8"
                        Text="Croatian:"
                        TextColor="Black"/>

                    <Label
                        Grid.Column="1"
                        Grid.Row="8"
                        FontAttributes="Bold"
                        Text="{Binding Land.Translations.Croatian}"
                        TextColor="Black"/>
                    <Label
                        Grid.Column="0"
                        Grid.Row="9"
                        Text="Persian:"
                        TextColor="Black"/>

                    <Label
                        Grid.Column="1"
                        Grid.Row="9"
                        FontAttributes="Bold"
                        Text="{Binding Land.Translations.Persian}"
                        TextColor="Black"/>
                </Grid>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>